CC=CC -O3 -fopenmp 
#CC=g++ -O3 -fopenmp 

#CFLAGS=-lblas -llapack

OBJS=	./obj/pdotprod.o \
	./obj/read_inputfile.o \
	./obj/unwrap_pstate.o \
	./obj/Simple_Math_Func.o \
	./obj/Matrix_Functions.o \
	./obj/idsClass.o \
	./obj/Basis_States.o \
	./obj/Momentum_Basis.o \
	./obj/global.o \
	./obj/pClasses.o
	

EXECUTABLE=pdotprod

headers=./src/*.h

MES: $(OBJS) $(headers)
	$(CC) -o pdotprod $(OBJS) $(CFLAGS) 

$(OBJS): ./obj/%.o : ./src/%.cpp
	$(CC) -o $@ -c $<

#WallClock.o: ./src/WallClock.h

clean:
	rm -f $(OBJS) $(PROG)
	rm -f $(EXECUTABLE)
